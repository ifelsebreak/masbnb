<div class="jumbotron jumbotron-fluid hero-image d-flex align-items-center mb-0">
  <div class="col d-flex flex-column align-items-end">
    <h1 class="display-4 text-light">Comfort Houses</h1>
    <%= link_to "See all houses", flats_path, class: "btn btn-primary" %>
  </div>
</div>
<!--TODO: make them required-->
<div class="bg-primary pt-3 pb-3">
  <div class="container">
    <%= simple_form_for :search, url: "/flats", class: "form-horizontal", method: "get" do |form| %>
      <div class="form-row align-items-center justify-content-around">
        <%= form.input :country_code, { class: 'form-control', data: { attribute: "value" }, selected: "IT", :id => "country-list", label: "Destination" } %>
        <%= form.input :starts_at, as: :string, required: false, input_html: { class: "datepicker form-control", id: "range_start" } %>
        <%= form.input :ends_at, as: :string, required: false, input_html: { class: "datepicker form-control", id: "range_end" } %>
        <%= form.input :guests, collection: 1..10, selected: 1, :id => "guests", label: "Guests", class: "form-control" %>
        <%= form.submit "Search", :class => "btn btn-primary border" %>
      </div>
    <% end %>
  </div>
</div>
