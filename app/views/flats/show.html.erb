<div class="container" >
  <h3 class="text-center m-3"><%= @flat.title %>, <%= @flat.address %></h3>
  <% @flat.photo.each do |photo| %>
    <img src="https://cdn.shopify.com/s/files/1/1661/5755/products/property-placeholder_1024x1024.jpg?v=1482778691" alt="">
    <%# <%= cl_image_tag photo.key, height: 400, width: 618, crop: :fill, class: "rounded mx-auto d-block" %>
  <% end %>
  <h4 class="mt-3 text-center"><%= @flat.description %></h4>
  <div class="row justify-content-center">
      <p class="btn btn-link"><i class="fa fa-wallet"></i> <%= @flat.price %>â‚¬ / night</p>
      <p class="btn btn-link"><i class="fa fa-user"></i> <%= @flat.capacity %> people</p>
  </div>
    <div class="row justify-content-center">
      <% if current_user.id != @flat.user_id %>
        <%= link_to "Book now", new_flat_reservation_path(@flat), class: "btn btn-primary m-3" %>
      <% else %>
        <%= link_to "Edit Flat", edit_flat_path(@flat), class: "btn btn-primary m-3" %>
        <%= link_to "Delete Flat", flat_path(@flat), method: :delete, data: { confirm: 'Are you sure you want to delete this reservation?' }, class: "btn btn-primary m-3" %>
      <% end %>
      <%= link_to "Back to Flats", flats_path, class: "btn btn-primary m-3" %>
    </div>
</div>

