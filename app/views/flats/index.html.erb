<h1 class="text-center">Select your flat</h1>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @flats.each do |flat| %>
      <% if current_user.id != flat.user_id %>
        <div class="col pt-3 d-flex align-items-stretch">
          <%= link_to flat do %>
            <div class="card" style="width: 20rem;">
              <%# <img src="https://cdn.shopify.com/s/files/1/1661/5755/products/property-placeholder_1024x1024.jpg?v=1482778691" alt=""> %>
              <%= cl_image_tag flat.photo[0].key, height: 200, width: 318, crop: :fill %>
              <div class="card-body d-flex justify-content-between p-3">
                <p class="card-text mb-0"><%= flat.title %></p>
                <p class="price mb-0"><%= flat.price %>â‚¬ / night</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

