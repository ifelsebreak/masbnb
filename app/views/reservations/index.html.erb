<div class="container">
  <h1 class="text-center">Reservations List</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
    <% @reservations.each do |reservation| %>
      <div class="col pt-3">
        <%= link_to reservation do %>
          <div class="card" style="width: 20rem;">
            <% reservation.flat.photo.each do |photo| %>
              <%# <img src="https://cdn.shopify.com/s/files/1/1661/5755/products/property-placeholder_1024x1024.jpg?v=1482778691" alt=""> %>
            <%= cl_image_tag photo.key, height: 200, width: 318, crop: :fill, class: "rounded mx-auto d-block" %>
            <% end %>
            <div class="card-body d-flex justify-content-between p-3">
              <p class="card-text mb-0"><%= reservation.flat.title %></p>
              <p class="price mb-0"><%= reservation.flat.price %>â‚¬ / night</p>
            </div>
            <p class="text-center text-dark">Begin date: <%= reservation.begin_date %></p>
            <p class="text-center text-dark">End date: <%= reservation.end_date %></p>
            <%= link_to "Delete reservation", reservation_path(reservation), method: :delete, data: { confirm: 'Are you sure you want to delete this reservation?' }, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
