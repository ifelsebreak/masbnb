<h1>Reservations List</h1>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @reservations.each do |reservation| %>
      <div class="col pt-3">
        <%= link_to reservation do %>
        <div class="card" style="width: 20rem;">
          <!--TODO link reservation image-->
          <img src="https://a0.muscache.com/im/pictures/6272f4eb-5189-42db-bca2-695ab86ced8a.jpg?im_w=1200" class="card-img-top" alt="...">
          <div class="card-body d-flex justify-content-between p-3">
            <p class="card-text mb-0"><%= reservation.flat.title %></p>
            <p class="price mb-0"><%= reservation.flat.price %>â‚¬ / night</p>
            <p class=""><%= reservation.begin_date %></p>
            <p class=""><%= reservation.end_date%></p>
            <%= link_to "Delete reservation", reservation_path(reservation), method: :delete, data: { confirm: 'Are you sure you want to delete this reservation?' } %>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
