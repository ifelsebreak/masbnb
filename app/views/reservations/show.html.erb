<h1 class="ml-3 mt-2 text-center">Your reservation</h1>
<div class="card ml-4 mt-4" style="width: 18rem;">
  <%#=image_tag(@reservation.flat.photo[0], crop: :fill, :class => "card_img_top")%>
  <%= cl_image_tag @reservation.flat.photo[0].key, height: 200, width: 286, crop: :fill %>
  <div class="card-body">
    <h5 class="card-title"><%= @reservation.flat.title %></h5>
    <p>Your stay starts on <%= @reservation.begin_date %> and ends on <%= @reservation.end_date %></p>
  </div>
    <%= link_to "Delete reservation", reservation_path(@reservation), method: :delete, data: { confirm: 'Are you sure you want to delete this reservation?' }, class: "btn btn-primary m-3" %>
</div>

